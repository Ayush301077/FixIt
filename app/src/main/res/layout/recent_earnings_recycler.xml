            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="30dp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>