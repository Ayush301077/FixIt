            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="09/11/2024"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"/>


        <TextView
            android:layout_width="wrap_content"
